<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="josep.com.firebaseenintents.Agafar_numero">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Numero actual en la cua" />

    <Button
        android:id="@+id/b_agafarNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agafar numero"
        android:layout_below="@+id/text_NumFb"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/text_NumFb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/b_agafarNumero"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="36dp"
        android:text="TextView" />

    <Button
        android:id="@+id/b_reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_NumFb"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:text="Reiniciar valors" />

</RelativeLayout>
